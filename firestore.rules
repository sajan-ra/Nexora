
rules_version = '2';

service cloud.firestore {
  match /databases/{database}/documents {
    
    // Admin Identification
    function isAdmin() {
      return request.auth != null && request.auth.uid == "wL3xCPtylQc5pxcuaFOWNdW62UW2";
    }

    // Portfolios: Users can only manage their own documents
    match /portfolios/{userId} {
      allow read, write: if request.auth != null && request.auth.uid == userId;
    }
    
    // Global Settings: Everyone reads, only Admin writes
    match /settings/market {
      allow read: if request.auth != null;
      allow write: if isAdmin();
    }
    
    // Market Data Snapshot: Optimizing for 1 doc read per update cycle
    match /market/snapshot {
      allow read: if request.auth != null;
      allow write: if isAdmin(); 
    }
    
    // Deny all other access
    match /{document=**} {
      allow read, write: if false;
    }
  }
}
